@model Superstars.WebApp.Models.AccountViewModels.LoginViewModel
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Login</title>
</head>
<body>
<div class="container">
    <h2 class="text-center center-block">Connexion à All-In</h2>

    <form asp-controller="User" asp-action="Login" method="post">
        @if (!ViewContext.ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="alert alert-danger"></div>
        }
        <div class="form-group">
            <label asp-for="Pseudo" class="control-label"></label>
            <input asp-for="Pseudo" class="form-control"/>
            <span asp-validation-for="Pseudo"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control"/>
            <span asp-validation-for="Password"></span>
        </div>

        <button type="submit" class="btn-btn-dark btn-block">Connexion</button>

        <div style="text-align: center" class="form-group">
            <a asp-action="Register">S'incrire</a>
        </div>
    </form>
</div>
</body>
</html>
