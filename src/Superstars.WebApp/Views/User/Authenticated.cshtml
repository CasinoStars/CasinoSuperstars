@using Superstars.WebApp.Services

@{
    string location = string.Format("{0}://{1}/", Context.Request.Scheme, Context.Request.Host);
    Token token = (Token)ViewData["Token"];
    string pseudo = (string)ViewData["Pseudo"];
    string breachPadding = (string)ViewData["BreachPadding"];
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Authenticated</title>
</head>
<body>
    <script>
        (function () {
            window.opener.postMessage({
                type: 'authenticated',
                payload: {
                    bearer: {
                        access_token: '@token.AccessToken',
                        expires_in: @token.ExpiresIn
                    },
                    pseudo: '@pseudo',
                }
            }, '@location');
            window.close();
        })();
    </script>
    <!-- @breachPadding -->
</body>
</html>